{
  "name": "react-redux-webpack-starter",
  "version": "0.0.1",
  "description": "Base configuration for a React + Redux application that uses Webpack and NPM scripts for the build process.",
  "repository": "https://github.com/goodbomb/react-redux-webpack-starter",
  "main": "src/main.js",
  "engines": {
    "node": ">= 6.11.3"
  },
  "scripts": {
    "start": "better-npm-run start",
    "build": "better-npm-run build:prod",
    "start:prod": "better-npm-run start:prod",
    "test": "better-npm-run test",
    "lint": "eslint src"
  },
  "betterScripts": {
    "start": {
      "command": "rimraf dist && node server.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build:prod": {
      "command": "rimraf dist && mkdir dist && webpack --optimize-minimize --progress --colors --config ./webpack/webpack.config.prod.js --bail",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start:prod": {
      "command": "better-npm-run build:prod && node server.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test": {
      "command": "mocha ./src/**/*.spec.js --compilers js:babel-register --require chai --require sinon --reporter spec --recursive --growl",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "devDependencies": {
    "autoprefixer": "~7.1.4",
    "babel-core": "~6.26.0",
    "babel-eslint": "~7.2.3",
    "babel-loader": "~7.1.2",
    "babel-plugin-transform-class-properties": "~6.24.1",
    "babel-plugin-transform-decorators-legacy": "~1.3.4",
    "babel-polyfill": "~6.26.0",
    "babel-preset-env": "~1.6.0",
    "babel-preset-react": "~6.24.1",
    "babel-preset-stage-0": "~6.24.1",
    "babel-register": "~6.26.0",
    "better-npm-run": "0.1.0",
    "dotenv": "~4.0.0",
    "eslint": "^4.6.1",
    "eslint-friendly-formatter": "~3.0.0",
    "eslint-loader": "~1.9.0",
    "eslint-plugin-promise": "~3.5.0",
    "eslint-plugin-react": "~7.3.0",
    "extract-text-webpack-plugin": "~3.0.0",
    "react-hot-loader": "~3.0.0-beta.7",
    "rimraf": "~2.6.1",
    "style-loader": "~0.18.2",
    "stylelint": "~8.1.1",
    "stylelint-webpack-plugin": "~0.9.0",
    "webpack": "~3.5.6",
    "webpack-dev-middleware": "~1.12.0",
    "webpack-dev-server": "~2.7.1",
    "webpack-hot-middleware": "~2.19.1"
  },
  "dependencies": {
    "axios": "~0.16.2",
    "babel-plugin-module-resolver": "~2.7.1",
    "babel-preset-es2015": "~6.24.1",
    "babel-preset-es2015-webpack": "~6.4.3",
    "babel-preset-stage-1": "~6.24.1",
    "babel-runtime": "~6.26.0",
    "classnames": "~2.2.5",
    "express": "~4.15.4",
    "html-webpack-plugin": "~2.30.1",
    "immutability-helper": "~2.3.1",
    "loader-runner": "~2.3.0",
    "loader-utils": "~1.1.0",
    "lodash": "~4.17.4",
    "morgan": "~1.8.2",
    "prop-types": "^15.5.10",
    "proxy-middleware": "~0.15.0",
    "react": "~15.6.1",
    "react-dom": "~15.6.1",
    "react-helmet": "~5.2.0",
    "react-redux": "~5.0.6",
    "react-router": "~4.2.0",
    "react-router-redux": "~4.0.8",
    "react-tap-event-plugin": "~2.0.1",
    "redux": "~3.7.2",
    "redux-form": "~7.0.4",
    "redux-promise": "~0.5.3",
    "redux-thunk": "~2.2.0",
    "styled-components": "~2.1.2",
    "stylelint-processor-styled-components": "~0.4.0",
    "uglify-js": "~3.0.28",
    "uglifyjs-webpack-plugin": "~0.4.6",
    "webpack-core": "~0.6.9",
    "webpack-sources": "~1.0.1"
  }
}
